{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [
      "./types", // your custom typings
      "./node_modules/@types"
    ],
    "paths": {
      "templater-obsidian": ["./types/templater/templater.d.ts"],
      "templater-obsidian/*": ["./types/templater/*"],
      "src/*": ["./src/*"]
    },
    "types": ["obsidian", "node"], // this tells TS to load obsidian.d.ts globally
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
